@using Task9ASPNetCore.ViewModels

@model IEnumerable<CourseViewModel>

<div class="container mt-2">
    <div class="row">
        <div class="col-20 alert-success text-center">
            <span class="text-dark" style="font-size: 30px" > Choose your Course </span>
        </div>
        <table class="table table-success table-striped table-bordered mt-5 text-center">
            <theead>
                <tr>
                    <th scope="col"><span class="text-primary">Course Name</span></th>
                    <th scope="col" ><span class="text-primary">Description</span></th>
                    <th scope="col" ><span class="text-info">Update Course</span></th>
                    <th scope="col" ><span class="text-danger">Delete Course</span></th>
                </tr>
            </theead>
            <tbody>
                @foreach(var course in Model)
                {
                <tr>
                    <th scope="row"  class="col-2"><a asp-controller="Group" asp-action="Index" asp-route-id="@course.Id">@course.Name</a></th>
                    <th class="col-8">@course.Description</th>
                    <th class="col-1"><a class="btn btn-info" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" >Update</a></th>
                    <th class="col-1"><a class="btn btn-close btn-danger" asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id"></a></th>
                </tr>
                }
            </tbody>
           
        </table>
        <div class="row">
            <div class="col">
                <a class="btn btn-success" asp-controller="Course" asp-action="Create">Add course</a>

            </div>
        </div>
    </div>
</div>