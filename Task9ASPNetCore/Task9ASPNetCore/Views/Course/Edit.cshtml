@using Task9ASPNetCore.ViewModels
@model CourseViewModel

<div class="container mt-2">
    <div class="row">
        <div class="col-20 alert-success text-center">
            <span class="text-dark" style="font-size: 30px"> Edit Course </span>
        </div>
        <div>
            <form asp-controller="Course" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All"></div>
                <div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                 <div>
                    <label asp-for="Description"></label>
                    <input asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>

                <input type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

