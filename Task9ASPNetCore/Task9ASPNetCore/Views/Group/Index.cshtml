
@using Task9ASPNetCore.ViewModels

@model IEnumerable<GroupViewModel>

<div class="container mt-2">
    <div class="row">
        <div class="col-20 alert-success text-center">
            <span class="text-dark" style="font-size: 30px" > Choose your Group </span>
        </div>
        <table class="table table-success table-striped table-bordered mt-5 text-center">
            <theead>
                <tr>
                    <th scope="col"><span class="text-primary">Group Name</span></th>
                    <th scope="col"><span class="text-primary">Student Count</span></th>
                    <th scope="col" ><span class="text-info">Update Group</span></th>
                    <th scope="col" ><span class="text-danger">Delete Group</span></th>
                </tr>
            </theead>
            <tbody>
                
                @if (Model != null)
                {
                    
                @foreach(var group in Model)
                {
                <tr>
                    <th scope="row"  class="col-8"><a  asp-controller="Student" asp-action="Index" asp-route-id="@group.Id" asp-route-courseId="@group.CourseId" >@group.Name </a></th>
                    <th scope="row"  class="col-2">@group.StudentCount</th> 
                    <th class="col-1"><a class="btn btn-info" asp-controller="Group" asp-action="Edit" asp-route-id="@group.Id"
                        asp-route-courseId="@group.CourseId">Update</a>
                        </th>
                    <th class="col-1"><a class="btn btn-close btn-danger" asp-controller="Group" asp-action="Delete" asp-route-id="@group.Id" 
                        asp-route-courseId="@group.CourseId"></a>
                        </th>
                </tr>
                }
                }
                    
            </tbody>
           
        </table>
        <div class="row">
            <div class="col">
                <a class="btn btn-success" asp-controller="Group" asp-action="Create" asp-route-courseId="@ViewBag.CourseID">Add Group</a>

            </div>
        </div>
    </div>
</div>
